@model IEnumerable<TipoCuenta>
@{
    ViewData["title"] = "Listado de tipos cuentas";
}
    
<h1>Tipos de cuentas</h1>
<h5>El tipo de cuenta se refiere a la agrupación de cuentas por usuario, ejemplo: Préstamos, tarjetas debitos y creditos.</h5>

<a asp-action="Crear" class="btn btn-primary mb-3">Nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombres</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipoCuenta in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@tipoCuenta.Id"> Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@tipoCuenta.Id">Borrar</a>
                </td>
                <td>
                    @tipoCuenta.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>